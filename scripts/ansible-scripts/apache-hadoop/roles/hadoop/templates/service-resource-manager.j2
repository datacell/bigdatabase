#!/bin/bash
# file: service-resource-manager.sh
# Purpose: This script will start the Hadoop services


if [ -z "$1" ];  then
    ACTIVITY_TYPE=start
else
    ACTIVITY_TYPE=$1
fi

su - {{ hadoop_user }} -c "/bin/bash {{ hadoop_dir }}/{{ hadoop_expended_version }}/sbin/yarn-daemon.sh $ACTIVITY_TYPE resourcemanager"
sleep 2s
